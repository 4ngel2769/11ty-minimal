<ul>
  {% for post in collections.blog %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <div class="excerpt">
        {% if post.date %}<small>{{ post.date | dateFull }}</small>{% endif %}
        {% if post.data.excerpt %}{% if post.date %} Â· {% endif %}{{ post.data.excerpt }}{% endif %}
      </div>
    </li>
  {% endfor %}
</ul>
{% endblock %}