  <form class="contact-form" action="mailto:{{ site.social.mail }}" method="POST" enctype="text/plain">
    <label for="email">Your Email</label>
    <input id="email" name="email" type="email" required autocomplete="email" placeholder="your@email.com">
    <label for="message">Message</label>
    <textarea id="message" name="body" required placeholder="Type your message here..."></textarea>
    <button type="submit">Send</button>
  </form>
</div>
<style>
.contact-cta{display:flex;flex-direction:column;align-items:center;justify-content:center;border:5px solid var(--border);border-radius:20px;padding:2.5rem 1.5rem 2rem;max-width:370px;margin:3rem auto 2.5rem;background:var(--footer-bg)}.contact-icons{display:flex;gap:1.5rem;margin-bottom:1.2rem}.contact-icons a{display:flex;align-items:center;justify-content:center;width:44px;height:44px;border-radius:20%;border:2px solid var(--border);background:var(--bg);color:var(--text);font-size:1.6rem;transition:border-color 0.2s, background 0.2s;text-decoration:none}.contact-icons a:hover{border-color:var(--link-hover);background:var(--header-link-bg)}.contact-form{width:100%;margin-top:1.2rem;display:flex;flex-direction:column;gap:0.7rem}.contact-form label{font-size:1em;margin-bottom:0.2em;font-weight:500}.contact-form input,.contact-form textarea{width:100%;border:3px solid transparent;border-radius:8px;padding:0.7em 0.9em;font-size:1em;background:var(--bg);color:var(--text);resize:vertical;min-height:2.2em;border-color:var(--header-link-bg)}.contact-form textarea{min-height:80px;max-height:200px}.contact-form input:focus,.contact-form textarea:focus{border-color:var(--link-hover);outline:none}.contact-form button{margin-top:0.5em;padding:0.7em 1.5em;border-radius:8px;border:none;background:var(--header-link-bg);color:var(--header-text);font-size:1em;font-weight:600;cursor:pointer;transition:background 0.2s, color 0.2s}.contact-form button:hover{background:var(--link-hover);color:var(--bg)}@media (max-width: 480px){.contact-cta{padding:1.2rem 0.5rem}}
</style>
